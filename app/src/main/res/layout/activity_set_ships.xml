            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:background="@color/transparent"
            android:text="Ok"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_tv_2" />
